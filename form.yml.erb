<%-
  groups = OodSupport::User.new.groups.sort_by(&:id).tap { |groups|
    groups.unshift(groups.delete(OodSupport::Process.group))
  }.map(&:name).grep(/^P./)
-%>
---
cluster: "*"
cacheable: false
form:
  - bc_num_hours
  - bc_num_slots
  - version
  - custom_num_cores
attributes:
  version: "4.12.0"
  bc_num_slots: null
  custom_num_cores:
    widget: "number_field"
    label: "Number of CPUs"
    value: 1
    min: 1
    max: 4
    step: 1
